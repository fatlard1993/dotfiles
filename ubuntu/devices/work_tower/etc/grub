#/etc/default/grub
# If you change this file, run 'update-grub2' afterwards

GRUB_DEFAULT=0
GRUB_TIMEOUT=1
GRUB_DISTRIBUTOR=`lsb_release -i -s 2> /dev/null || echo Debian`
GRUB_CMDLINE_LINUX_DEFAULT="net.ifnames=0 biosdevname=0 text"
GRUB_CMDLINE_LINUX="video=efifb fbcon=rotate:1"

GRUB_TERMINAL=console