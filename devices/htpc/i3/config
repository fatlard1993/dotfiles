# Special keys on Rii mini i8
# weird lookin play esque button = XF86Tools
# maginifying glass = XF86Search
# house icon = XF86Explorer
# e icon = XF86HomePage


workspace 1 output $mainDisplay
workspace 2 output $mainDisplay
workspace 3 output $mainDisplay
workspace 4 output $mainDisplay
workspace 5 output $mainDisplay
workspace 6 output $mainDisplay
workspace 7 output $mainDisplay
workspace 8 output $mainDisplay
workspace 9 output $mainDisplay
workspace 10 output $mainDisplay

new_window pixel $borderSize

new_float pixel $borderSize

font pango:Source Code Pro, FontAwesome $fontSize

focus_follows_mouse no

force_display_urgency_hint 1000 ms

for_window [class="feh"] fullscreen enable


bindsym Print                 $ex scrot "Pictures/Screenshots/%Y_%m_%d_%H:%M.png" && notify-send "Screenshot!"

bindsym XF86AudioRaiseVolume  $ex pactl set-sink-volume $pactlSink +5%
bindsym XF86AudioLowerVolume  $ex pactl set-sink-volume $pactlSink -5%
bindsym XF86AudioMute         $ex pactl set-sink-mute   $pactlSink toggle

# General
bindsym $win+h                $ex leafpad ~/dotfiles/devices/htpc/Keyboard\ Shortcuts.md

bindsym $win+q                kill

bindsym $win+t                $ex gnome-terminal

bindsym $win+v                $ex ~/.scripts/clipd menu

bindsym $win+m                mode $modes_menu

bindsym $win+u                exec ~/dotfiles/devices/htpc/update

bindsym $win+space            $launcher
bindsym XF86Search            $launcher

# Window Management

## Focus
bindsym $win+w                focus up
bindsym $win+a                focus left
bindsym $win+s                focus down
bindsym $win+d                focus right

bindsym $win+1                workspace number 1
bindsym $win+2                workspace number 2
bindsym $win+3                workspace number 3
bindsym $win+4                workspace number 4
bindsym $win+5                workspace number 5
bindsym $win+6                workspace number 6
bindsym $win+7                workspace number 7
bindsym $win+8                workspace number 8
bindsym $win+9                workspace number 9
bindsym $win+0                workspace number 10
bindsym $win+Tab              workspace back_and_forth

## Move
bindsym $alt+w                move up
bindsym $alt+a                move left
bindsym $alt+s                move down
bindsym $alt+d                move right
bindsym $alt+o                $overwatch

bindsym $alt+1                move container to workspace number 1, workspace number 1
bindsym $alt+2                move container to workspace number 2, workspace number 2
bindsym $alt+3                move container to workspace number 3, workspace number 3
bindsym $alt+4                move container to workspace number 4, workspace number 4
bindsym $alt+5                move container to workspace number 5, workspace number 5
bindsym $alt+6                move container to workspace number 6, workspace number 6
bindsym $alt+7                move container to workspace number 7, workspace number 7
bindsym $alt+8                move container to workspace number 8, workspace number 8
bindsym $alt+9                move container to workspace number 9, workspace number 9
bindsym $alt+0                move container to workspace number 10, workspace number 10
bindsym $alt+Tab              move container to workspace back_and_forth, workspace back_and_forth

## Resize
bindsym $alt+plus             resize grow height 10 px or 10 ppt, resize grow width 10 px or 10 ppt
bindsym $alt+minus            resize shrink height 10 px or 10 ppt, resize shrink width 10 px or 10 ppt

## Scratchpad
bindsym $win+grave            scratchpad show
bindsym $alt+grave            move scratchpad

## Other
bindsym $alt+f                floating toggle