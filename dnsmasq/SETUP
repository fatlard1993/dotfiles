#!/bin/bash

if [[ `whoami` != "root" ]]; then
	echo -e "This script needs to be run as root ... Restarting with sudo\n"
	CMD="$(dirname $(readlink -f $0))/$(basename $0) $@"
	exec sudo $CMD
	exit #?
fi

dotfiles_folder=$HOME/Projects/dotfiles

systemctl disable systemd-resolved

cp --remove-destination $dotfiles_folder/dnsmasq/dnsmasq.conf /etc/
cp --remove-destination $dotfiles_folder/dnsmasq/resolv.personal /etc/
cp --remove-destination $dotfiles_folder/dnsmasq/resolv.conf /etc/
cp --remove-destination $dotfiles_folder/dnsmasq/hosts.adblock /etc/
cp --remove-destination $dotfiles_folder/dnsmasq/NetworkManager.conf /etc/NetworkManager/

service network-manager restart

service dnsmasq restart