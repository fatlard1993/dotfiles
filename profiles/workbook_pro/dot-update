#!/bin/zsh

source "$HOME/.dotfiles/bin/lib/dot-util" "$0" "$@"

echo "Linking pam sudo config"
sudo ln -sf $profilePath/pam_sudo /etc/pam.d/sudo

$macosPath/dot-update

(cd $profilePath ; brew bundle --no-lock)

$dotfilesPath/macos/macos.config.d/ssd
$dotfilesPath/macos/macos.config.d/touch-bar

sudo env PATH=$PATH:/Users/chase.whitfield/.nvm/versions/node/$(nvm version)/bin /Users/chase.whitfield/.nvm/versions/node/$(nvm version)/lib/node_modules/pm2/bin/pm2 startup launchd -u chase.whitfield --hp /Users/chase.whitfield