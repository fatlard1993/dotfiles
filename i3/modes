set $mode_layout "<span foreground='#000' weight='bold'>Layout</span>  <b>D</b>efault <b>S</b>tacking <b>T</b>abbed"
mode --pango_markup $mode_layout {
  bindsym s layout stacking, mode default
  bindsym t layout tabbed, mode default
  bindsym d layout default, mode default

  bindsym Return mode default
  bindsym Escape mode default
}

set $mode_system "<span foreground='#000' weight='bold'>System</span>  <b>L</b>ock <b>E</b>xit <b>R</b>eboot <b>U</b>pdate <b>S</b>hutdown"
mode --pango_markup $mode_system {
  bindsym e $ex sudo ~/.scripts/system logout
  bindsym s $ex sudo ~/.scripts/system shutdown
  bindsym r $ex sudo ~/.scripts/system reboot
  bindsym u $ex (cd ~/Projects/dotfiles && git pull && ./SETUP)
  bindsym l mode default, $ex ~/.scripts/system lock

  bindsym Return mode default
  bindsym Escape mode default
}

set $mode_wallpaper_get "<span foreground='#000' weight='bold'>Get Wallpaper</span>  <b>R</b>andom <b>L</b>ist <b>S</b>pecific"
mode --pango_markup $mode_wallpaper_get {
  bindsym r exec ~/.scripts/wallpaper get, mode $mode_wallpaper_main
  bindsym l exec ~/.scripts/wallpaper get 3 list, mode $mode_wallpaper_main
  bindsym s exec i3-input -F 'exec ~/.scripts/wallpaper get "%s"' -P 'NUM SUBREDDIT: ', mode $mode_wallpaper_main

  bindsym Return mode default
  bindsym Escape mode default
}

set $mode_wallpaper_main "<span foreground='#000' weight='bold'>Wallpaper</span>  <b>G</b>et <b>B</b>rowse <b>R</b>andom <b>T</b>oday <b>U</b>nsorted <b>S</b>ave <b>D</b>elete <b>(Shift)S</b>tash <b>(Control)S</b>ave to subfolder"
mode --pango_markup $mode_wallpaper_main {
  bindsym g mode $mode_wallpaper_get
  bindsym b mode default, exec ~/.scripts/wallpaper set list
  bindsym r exec ~/.scripts/wallpaper set
  bindsym t exec ~/.scripts/wallpaper set today
  bindsym u exec ~/.scripts/wallpaper set unsorted
  bindsym s exec ~/.scripts/wallpaper save
  bindsym Shift+s exec ~/.scripts/wallpaper delete stash
  bindsym Control+s exec i3-input -F 'exec ~/.scripts/wallpaper save "%s"' -P 'Subfolder: (default:saved)'
  bindsym d exec ~/.scripts/wallpaper delete

  bindsym Return mode default
  bindsym Escape mode default
}

set $mode_cursor "<span foreground='#000' weight='bold'>KB Cursor Control</span>  <b>Movement</b> Shift = slow | Control = fast :: <b>Buttons</b> 1 = LMB 2 = CMB 3 = RMB | Shift = press | Control = Release"
mode --pango_markup $mode_cursor {
	set $slow 5
	set $quick 20
	set $fast 100
	set $superFast 200

	bindsym Shift+Left 			exec xdotool mousemove_relative -- -$slow 0
	bindsym Shift+Down 			exec xdotool mousemove_relative 0 $slow
	bindsym Shift+Up 				exec xdotool mousemove_relative -- 0 -$slow
	bindsym Shift+Right 		exec xdotool mousemove_relative $slow 0

	bindsym Left 						exec xdotool mousemove_relative -- -$quick 0
	bindsym Down 						exec xdotool mousemove_relative 0 $quick
	bindsym Up 							exec xdotool mousemove_relative -- 0 -$quick
	bindsym Right 					exec xdotool mousemove_relative $quick 0

	bindsym Control+Left 		exec xdotool mousemove_relative -- -$fast 0
	bindsym Control+Down 		exec xdotool mousemove_relative 0 $fast
	bindsym Control+Up 			exec xdotool mousemove_relative -- 0 -$fast
	bindsym Control+Right 	exec xdotool mousemove_relative $fast 0

	bindsym $mod+Left 			exec xdotool mousemove_relative -- -$superFast 0
	bindsym $mod+Down 			exec xdotool mousemove_relative 0 $superFast
	bindsym $mod+Up 				exec xdotool mousemove_relative -- 0 -$superFast
	bindsym $mod+Right 			exec xdotool mousemove_relative $superFast 0

	# Left Click
	bindsym 1 exec xdotool click 1

	# Middle Click
	bindsym 2 exec xdotool click 2

	# Right Click
	bindsym 3 exec xdotool click 3

	# Left Click-and-drag
	bindsym Shift+1 exec xdotool mousedown 1

	# Middle Click-and-drag
	bindsym Shift+2 exec xdotool mousedown 2

	# Right Click-and-drag
	bindsym Shift+3 exec xdotool mousedown 3

	# Left Drag release
	bindsym Control+1 exec xdotool mouseup 1

	# Middle Drag release
	bindsym Control+2 exec xdotool mouseup 2

	# Right Drag release
	bindsym Control+3 exec xdotool mouseup 3

  bindsym Return mode default
  bindsym Escape mode default
}

set $mode_kill "<span foreground='#000' weight='bold'>Kill</span>  <b>A</b>ll <b>W</b>orkspace"
mode --pango_markup $mode_kill {
	bindsym a [class=".*"] kill, mode default
  bindsym w exec i3-input -F '[workspace=%s] kill' -P 'Kill workspace: ', mode default

  bindsym Return mode default
  bindsym Escape mode default
}

set $mode_i3 "<span foreground='#000' weight='bold'>i3</span>  <b>U</b>pdate <b>R</b>eload <b>(Shift)R</b>estart <b>C</b>ommand"
mode --pango_markup $mode_i3 {
  bindsym u 			$ex (cd ~/Projects/dotfiles/i3 && ./SETUP)
  bindsym r 			reload
  bindsym Shift+r restart
	bindsym c				$ex i3-input -F '%s' -P 'Send command to i3: ', mode default

  bindsym Return mode default
  bindsym Escape mode default
}

set $mode_mark "<span foreground='#000' weight='bold'>Mark</span>  <b>W</b>orkspace <b>(Shift)W</b>indow"
mode --pango_markup $mode_mark {
	bindsym Shift+w	mode default, $ex ~/.scripts/i3windowMark $borderSize
	bindsym w 			mode default, $ex ~/.scripts/i3workspaceMark

  bindsym Return mode default
  bindsym Escape mode default
}

set $mode_menu "<span foreground='#000' weight='bold'>Mode Menu</span>  <b>S</b>ystem <b>W</b>allpaper <b>K</b>ill <b>M</b>ark <b>L</b>ayout <b>C</b>ursor <b>i</b>3"
mode --pango_markup $mode_menu {
  bindsym s mode $mode_system
  bindsym w mode $mode_wallpaper_main
  bindsym k mode $mode_kill
  bindsym l mode $mode_layout
  bindsym m mode $mode_mark
  bindsym c mode $mode_cursor
  bindsym i mode $mode_i3

  bindsym Return mode default
  bindsym Escape mode default
}

bindsym XF86PowerOff   mode $mode_system
bindsym $mod+m         mode $mode_menu