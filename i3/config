new_window pixel $borderSize

new_float pixel $borderSize

font pango:Source Code Pro, FontAwesome $fontSize

floating_modifier $mod

focus_follows_mouse no

force_display_urgency_hint 1000 ms

for_window [class="(?i)mpv"] floating enable

for_window [title="appear.in screen sharing is sharing your screen with appear.in."] floating enable


bindsym Print  $ex scrot "Pictures/Screenshots/%Y_%m_%d_%H:%M:%S.png" && notify-send "Screenshot!"

bindsym XF86AudioRaiseVolume        $ex pactl set-sink-volume $pactlSink +5%
bindsym XF86AudioLowerVolume        $ex pactl set-sink-volume $pactlSink -5%
bindsym XF86AudioMute               $ex pactl set-sink-mute   $pactlSink toggle

bindsym XF86MonBrightnessUp         $ex xbacklight -inc 10 -time 10   && $notifyBrightness
bindsym XF86MonBrightnessDown       $ex xbacklight -dec 10 -time 10   && $notifyBrightness

bindsym $mod+F3                     $ex pactl set-sink-volume $pactlSink +5%
bindsym $mod+F2                     $ex pactl set-sink-volume $pactlSink -5%
bindsym $mod+Shift+F3               $ex pactl set-sink-volume $pactlSink 99%
bindsym $mod+Shift+F1               $ex pactl set-sink-mute   $pactlSink toggle
bindsym $mod+Shift+F2               $ex pactl set-sink-mute   $pactlSink toggle

bindsym $mod+F11                    $ex xbacklight -dec 5  -time 10   && $notifyBrightness
bindsym $mod+F12                    $ex xbacklight -inc 5  -time 10   && $notifyBrightness
bindsym $mod+Shift+F11              $ex xbacklight -set 10 -time 3000 && $notifyBrightness
bindsym $mod+Shift+F12              $ex xbacklight -set 90 -time 3000 && $notifyBrightness

bindsym $mod+1                      workspace number 1
