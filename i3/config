bindsym $mod+c                      $ex ~/.scripts/clipd menu

bindsym $mod+f                      floating toggle

bindsym $mod+Control+f              fullscreen

bindsym $mod+q                      kill

bindsym $mod+n                      $ex i3-input -F 'rename workspace to "%s"' -P 'Name workspace: '

bindsym $mod+i                      $ex leafpad ~/.ideas

