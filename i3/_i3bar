bar {
  id bar-0
  output $mainDisplay

	# bindsym button1 $ex matchbox-keyboard
	bindsym button2 $ex scrot "Pictures/Screenshots/%Y_%m_%d_%H:%M:%S.png" && notify-send "Screenshot!"
	bindsym button4 nop
	bindsym button5 nop

  position top
  status_command i3status -c ~/.config/i3/status.conf
  strip_workspace_numbers yes
  separator_symbol "  "
  #other good separators: 

  colors {
    background $base01
    separator  $base02
    statusline $base04

    # State             Border  BG      Text
    focused_workspace   $base0D $base02 $base07
    active_workspace    $base05 $base03 $base00
    inactive_workspace  $base01 $base01 $base04
    urgent_workspace    $base08 $base08 $base07
    binding_mode        $base0A $base0A $base01
  }
}